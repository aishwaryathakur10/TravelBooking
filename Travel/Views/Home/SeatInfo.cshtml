@model Travel.Models.Table_bus
@using System.Linq




@{
    ViewBag.Title = "SeatInfo";
     
}

<html>
<head>
    <title></title>
    <script type="text/javascript" src="http://ajax.aspnetcdn.com/ajax/jQuery/jquery-1.6.1.min.js"></script>

    <style>


        .button {
        background-color: #4CAF50;
        border: none;
        color: white;
        padding: 15px 32px;
        text-align: center;
        text-decoration: none;
        display: inline-block;
        font-size: 16px;
        margin: 4px 2px;
        cursor: pointer;
    }
        
        /*h1 {
            width: 60%;
            margin: 100px auto 35px auto;
        }*/

  

    </style>
</head>

<body>
    

    <h2> Welcome to @ViewBag.busname Booking Services</h2>
        
        <div>
            <h3>Please select a seat</h3>
        </div>
         
            <div style="border:1px; width:400px">

             
               
                @for (var i = 0; i < 40; i++)
                {
                    
                   
                    if (i % 10 == 0)
                    {
                        <br />
                    }

                    
                    if (i % 20 == 0)
                    {
                        <br /><br />
                    }

                    <input type="checkbox" id=@i  name="chk" style="border:2px; zoom:2.5;" />
                }


            </div>
        <div>
            <br /><br /><br />
            @*<button id="book" class="button" onclick="@("window.location.href='" + @Url.Action("Confirmed", "Detail") + "'");"> Book </button>*@

            <button id="book" class="button" onclick="@("window.location.href='" + @Url.Action("Create", "Booked") + "'");"> Book </button>

      

            @*@Html.ActionLink("Edit", "Edit", new { id = item.B_id })*@ 

            @*<button id="book" class="button" onclick=""> Book </button>*@

        </div>
  


    <script type="text/javascript">
        $("#book").live("click", function () {

           
            $("input:checkbox[name=chk]:checked").each(function () {
                alert("You have chosen Seat Number: " + $(this).attr("id"));
            });
        });
    </script>


</body>
</html>